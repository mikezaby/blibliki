{
  "name": "@blibliki/pi",
  "version": "0.5.0",
  "type": "module",
  "bin": {
    "blibliki-pi": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "README.md",
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "NODE_ENV=development tsx src/index.ts",
    "lint": "eslint src",
    "tsc": "tsc --noEmit",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "bump": "npm version patch",
    "release": "pnpm run build && pnpm publish --access public"
  },
  "devDependencies": {
    "@types/audioworklet": "catalog:web-audio",
    "@types/node": "^22.10.2"
  },
  "dependencies": {
    "@blibliki/engine": "workspace:^",
    "@blibliki/models": "workspace:^",
    "@blibliki/utils": "workspace:^"
  }
}
