{
  "name": "@blibliki/ui",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./styles.css",
    "./tokens.css": "./tokens.css",
    "./eslint": "./eslint/index.js",
    "./eslint/ui-governance-plugin": "./eslint/ui-governance-plugin.js",
    "./package.json": "./package.json"
  },
  "files": [
    "README.md",
    "src",
    "dist",
    "eslint",
    "scripts",
    "styles.css",
    "tokens.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint:palette": "node scripts/check-css-palette.mjs",
    "lint": "pnpm run lint:palette && eslint src",
    "tsc": "tsc --noEmit",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "bump": "npm version patch",
    "release": "pnpm run build && pnpm publish --access public"
  },
  "dependencies": {
    "@blibliki/utils": "workspace:^",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-slot": "1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "catalog:tailwindcss"
  },
  "peerDependencies": {
    "react": ">=19"
  },
  "devDependencies": {
    "@types/react": "catalog:react-19"
  }
}
