{
  "private": true,
  "version": "1.0.0",
  "author": "Michalis Zabaras",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r --parallel run build",
    "tsc": "pnpm -r --parallel --no-bail exec tsc --noEmit",
    "lint": "pnpm -r --parallel --no-bail exec eslint src",
    "format": "pnpm -r --parallel exec prettier . --write",
    "format:check": "pnpm -r --parallel --no-bail exec prettier . --check",
    "test": "pnpm -r --parallel --if-present run test"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee",
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.26.0"
  }
}
