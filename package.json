{
  "private": true,
  "version": "1.0.1",
  "author": "Michalis Zabaras",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r --parallel run build",
    "build:packages": "pnpm -r --filter='./packages/**' run build",
    "tsc": "pnpm -r --parallel --no-bail run tsc",
    "lint": "pnpm -r --parallel --no-bail run lint",
    "format": "pnpm -r --parallel run format",
    "format:check": "pnpm -r --parallel --no-bail run format:check",
    "test": "pnpm -r --parallel --if-present run test",
    "bump": "pnpm -r --parallel --if-present run bump",
    "release": "pnpm -r --parallel --if-present run release"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@10.18.0",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  }
}
